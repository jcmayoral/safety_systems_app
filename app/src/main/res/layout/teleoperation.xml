<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Teleoperation Mode"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/angle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/strength_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/coordinate_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/angle_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/strength_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />

            <TextView
                android:id="@+id/coordinate_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:gravity="center|center_vertical"
            android:onClick="pressEStop"
            android:text="Emergency Stop"
            tools:layout_conversion_absoluteHeight="194dp"
            tools:layout_conversion_absoluteWidth="87dp" />

        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/mqtt_joystick2"
            android:layout_width="202dp"
            android:layout_height="205dp"
            android:layout_gravity="left"
            custom:JV_backgroundColor="#009688"
            custom:JV_borderColor="#00796B"
            custom:JV_borderWidth="4dp"
            custom:JV_buttonColor="#FF1100"
            custom:JV_buttonDirection="vertical"
            custom:JV_buttonSizeRatio="50%"
            custom:JV_fixedCenter="false"
            tools:layout_conversion_absoluteHeight="176dp"
            tools:layout_conversion_absoluteWidth="176dp" />

        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/mqtt_joystick"
            android:layout_width="218dp"
            android:layout_height="225dp"
            android:layout_gravity="right"
            custom:JV_backgroundColor="#009688"
            custom:JV_borderColor="#00796B"
            custom:JV_borderWidth="4dp"
            custom:JV_buttonColor="#FF1100"
            custom:JV_buttonDirection="horizontal"
            custom:JV_buttonSizeRatio="5%"
            custom:JV_fixedCenter="false"
            tools:layout_conversion_absoluteHeight="158dp"
            tools:layout_conversion_absoluteWidth="158dp" />


    </LinearLayout>

</LinearLayout>
