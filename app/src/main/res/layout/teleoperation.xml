<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <include
        layout="@layout/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Teleoperation Mode"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical"
            android:onClick="pressEStop"
            android:text="Emergency Stop"
            tools:layout_conversion_absoluteHeight="194dp"
            tools:layout_conversion_absoluteWidth="87dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            layout="@layout/bag_selection_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/cutter_angle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/cutter_strenght"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/cutter_coordinate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/angle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/strength_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/coordinate_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Cutter" />

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Robot" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <io.github.controlwear.virtual.joystick.android.JoystickView
                    android:id="@+id/cutter_control"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    custom:JV_backgroundColor="#009688"
                    custom:JV_borderColor="#00796B"
                    custom:JV_borderWidth="4dp"
                    custom:JV_buttonColor="#FF1100"
                    custom:JV_buttonDirection="vertical"
                    custom:JV_buttonStickToBorder="false"
                    custom:JV_autoReCenterButton="false"
                    custom:JV_buttonSizeRatio="10%"
                    custom:JV_fixedCenter="true"
                    tools:layout_conversion_absoluteHeight="10dp"
                    tools:layout_conversion_absoluteWidth="20dp" />

                <io.github.controlwear.virtual.joystick.android.JoystickView
                    android:id="@+id/robot_control"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    custom:JV_backgroundColor="#009688"
                    custom:JV_borderColor="#00796B"
                    custom:JV_borderWidth="4dp"
                    custom:JV_buttonColor="#FF1100"
                    custom:JV_buttonDirection="both"
                    custom:JV_buttonSizeRatio="10%"
                    custom:JV_buttonStickToBorder="false"
                    custom:JV_fixedCenter="false"
                    tools:layout_conversion_absoluteHeight="10dp"
                    tools:layout_conversion_absoluteWidth="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--
        androd:buttonColor="#03A9F4"
        app:stayPut="true"
        app:percentage="25"
        app:backgroundDrawable="R.drawable.background"
        app:buttonDrawable="R.drawable.button"-->


</LinearLayout>
